@model ToDoMVC.Models.PaginatedResult<ToDoMVC.Models.Todo>

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

@using (Html.BeginForm("INdex", "Home", FormMethod.Post))
{
    <form>
        <input type="text" name="text" />
        <input type="date" name="expire" />
        <input type="hidden" name="completed" value="false"/>
        <input type="submit">Invia
    </form>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Results.First().Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Results.First().Expire)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Results.First().Completed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Results) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Expire)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Completed)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
